<div class="content">

	<h1><%= @team.name %></h1>


		<%= link_to "Add Player to Team", new_team_player_path(@team) %>

		<%= link_to "Add Game for Team", new_team_game_path(@team) %>

	<div class="players-list-container">
		<h2>Players</h2>
		<ul>
		<% @team.players.each do |player| %>
			<li>
				<%= link_to player.name, player %>
				<%= link_to "Remove", "DELETE ROSTER" %>
			</li>
		<% end %>
		</ul>
	</div>

	<div class="games-list-container">
		<h2>Games</h2>
		<ul>
			<% @team.games.each do |game| %>
				<li>
					<%= link_to game.name, team_game_path(game) %>
					<p><%= game.location %></p>
					<p><%= game.time %></p>
				</li>
			<% end %>
		</ul>
	</div>
</div>
