<div class="content">

	<h1>Hi, <%= current_user.name %></h1>

		<%= link_to "Add a New Team", new_team_path, class: 'new-team-btn' %>
		<%= link_to "View all Upcoming Games", games_path, class: 'view-games-btn' %>

	<div class="teams-list-container">
		<h2>Your Teams:</h2>
		<ul>
			<% current_user.teams.each do |team| %>
				<li>
					<span class="team-names"><%= link_to team.name, team %></span>
					<span class="team-modifiers"><%= link_to "+ player", new_team_player_path(team) %></span>
					<span class="team-modifiers"><%= link_to "+ game", new_team_game_path(team) %></span>
				</li>
			<% end %>
		</ul>
	</div>

	<div class="upcoming-games-container">
		<h2>Upcoming Games:</h2>
		<ul>
			<% current_user.upcoming_games.each do |game| %>
				<li>
					<%= link_to game.name, team_game_path(game.team, game) %>
					<p>Confirmed Players: <%= game.confirmed_players.count %> / <%= game.players_required %></p>
					<p><%= game.location %></p>
					<p><%= game.time %></p>
				</li>
			<% end %>
		</ul>
	</div>

</div>
